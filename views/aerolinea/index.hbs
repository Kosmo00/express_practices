<section class="formulario">
  <div class="container-fluid p-4 ">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <div class="card my-3">
          <div class="card-body">

            <div class="card-header text-center">
              <h3>Introduzca sus datos</h3>
            </div>

